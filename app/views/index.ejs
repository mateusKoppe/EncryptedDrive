<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Encrypted Drive</title>
    <link rel="stylesheet" href="bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="bower_components/font-awesome/css/font-awesome.min.css">
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/"><i class="fa fa-lock"></i> EncryptedDrive</a>
      </div>
    </nav>
    <main class="container py-5">
      <div class="row align-items-stretch mt-4">
        <div class="col-12 col-md-6">
          <h1>Your files anonymous</h1>
          <ul>
            <li>No register</li>
            <li>No login</li>
            <li>No email authentication</li>
            <li>You define the key and the pack</li>
            <li>Enter pack and key to access</li>
          </ul>
        </div>
        <div class="col-12 col-md-6">
          <div class="card h-100">
            <div class="card-header text-white bg-success">Get your files</div>
            <div class="card-body">
              <p>Set strong's key and pack name.</p>
              <form method="post">
                <div class="form-group">
                  <label for="includePack">Pack</label>
                  <input class="form-control" name="pack" id="includePack" placeholder="Pack">
                </div>
                <div class="form-group">
                  <label for="includeKey">Key</label>
                  <input class="form-control" name="key" id="includeKey" type="password" placeholder="Key">
                </div>
                <div class="d-flex justify-content-between flex-column flex-lg-row">
                  <button type="submit" class="btn btn-success my-1">Enter</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <% if(unencryptedFiles.length){ %>
      <hr>
      <div class="mt-3">
        <h2>Unencrypted Files</h2>
        <div class="row">
          <div class="col">
            <ul class="list">
              <% unencryptedFiles.forEach(file => { %>
              <li><a target="_blank" href="<%= file.dir %>"><%= file.name %></a></li>
              <% })%>
            </ul>
          </div>
        </div>
        <div>
          <a href="/encrypt-pack" class="btn btn-primary">Encrypt again</a>
          <a href="/delete-pack" class="btn btn-danger">Delete pack</a>
        </div>
      </div>
      <% } %>
    </main>
  </body>
</html>
