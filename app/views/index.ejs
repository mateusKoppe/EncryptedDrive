<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Secury Files</title>
    <link rel="stylesheet" href="bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="bower_components/font-awesome/css/font-awesome.min.css">
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/"><i class="fa fa-lock"></i> SecuryFiles</a>
      </div>
    </nav>
    <main class="container py-5">
      <h1>Your files can be secury</h1>
      <div class="row align-items-stretch mt-4">
        <div class="col-12 col-md-6">
          <div class="card h-100">
            <div class="card-header text-white bg-success">Include files</div>
            <div class="card-body">
              <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                  <label for="includePack">Pack</label>
                  <input class="form-control" name="pack" id="includePack" placeholder="Pack">
                </div>
                <div class="form-group">
                  <label for="includePassword">Password</label>
                  <input class="form-control" name="password" id="includePassword" type="password" placeholder="Password">
                </div>
                <div class="form-group">
                  <label class="control-label" for="includePassword">Files</label>
                  <input class="form-control-file" multiple name="files" id="includePassword" type="file">
                </div>
                <button type="submit" class="btn btn-success">Save</button>
              </form>
            </div>
          </div>
        </div>
        <div class="col-12 col-md-6">
          <div class="card h-100">
            <div class="card-header text-white bg-primary">Get your files</div>
            <div class="card-body">
              <form method="post">
                <div class="form-group">
                  <label for="includePack">Pack</label>
                  <input class="form-control" name="pack" id="includePack" placeholder="Pack">
                </div>
                <div class="form-group">
                  <label for="includePassword">Password</label>
                  <input class="form-control" name="password" id="includePassword" type="password" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary">Get</button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <% if(unencryptedFiles.length){ %>
      <hr>
      <div class="mt-3">
        <h2>Unencrypted Files</h2>
        <div class="row">
          <div class="col">
            <ul class="list">
              <% unencryptedFiles.forEach(file => { %>
              <li><a target="_blank" href="<%= file.dir %>"><%= file.name %></a></li>
              <% })%>
            </ul>
          </div>
        </div>
        <div>
          <a href="/encrypt-pack" class="btn btn-primary">Encrypt again</a>
          <a href="/delete-pack" class="btn btn-danger">Delete pack</a>
        </div>
      </div>
      <% } %>
    </main>
  </body>
</html>
